{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "ES6",
        "target": "ES5",
        "jsx": "preserve",
        "allowJs": true,
        "moduleResolution": "Node",
        "typeRoots": ["./node_modules/@types"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}